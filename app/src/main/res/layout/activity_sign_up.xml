<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.heshitha.story.SignUpActivity"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundborder">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundborder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Create your new account"
                android:id="@+id/txtWelcomeText"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textColor="#666666"
                />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/imgBtnAddNewPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtWelcomeText"
                android:src="@drawable/addphotodefaultimage"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:background="#fff"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSignUpUsername"
                android:layout_below="@+id/imgBtnAddNewPhoto"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logintextboxbackground"
                android:layout_marginTop="25dp"
                android:hint="Username"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#666666"
                android:inputType="text"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSignUpEmail"
                android:layout_below="@+id/txtSignUpUsername"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logintextboxbackground"
                android:layout_marginTop="25dp"
                android:hint="Email"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#666666"
                android:inputType="textEmailAddress"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/txtSignUpPassword"
                android:layout_below="@+id/txtSignUpEmail"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logintextboxbackground"
                android:layout_marginTop="25dp"
                android:hint="Password"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSignUpPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="#e41d1d"
                android:padding="5dp"
                android:id="@+id/frameLayout"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Done"
                    android:id="@+id/btnSignUpJoinNow"
                    android:layout_gravity="center"
                    android:background="@drawable/loginbuttonbackground"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:padding="0dp"
                    />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sign In"
                android:id="@+id/txtSignIn"
                android:layout_below="@+id/frameLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:textColor="#666666"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="\u00A9 2015 Copyright by Story"
                android:id="@+id/txtCopyright"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"/>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
