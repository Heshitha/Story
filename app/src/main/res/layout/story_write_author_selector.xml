<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundborder">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundborder">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_alignParentTop="true"
                android:id="@+id/flStoryAccountButtonHolder">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fd0505"
                    android:layout_gravity="bottom|center"
                    android:text="Story Account"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="75dp"
                    android:id="@+id/btnStoryAccount"
                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgUserImage"
                    android:src="@drawable/userimageicon"
                    android:layout_gravity="top|center"
                    android:adjustViewBounds="true"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="35dp"
                android:layout_below="@+id/flStoryAccountButtonHolder"
                android:id="@+id/flAnonymousButtonHolder">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#6d6968"
                    android:layout_gravity="top|center"
                    android:text="Anonymous"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="75dp"
                    android:id="@+id/btnAnonymousAuthor"
                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgAnonymousImage"
                    android:src="@drawable/anonymousicon"
                    android:layout_gravity="bottom|center"
                    android:adjustViewBounds="true"/>

            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>