<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>

        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        
    </style>
    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#fd0505</item>
        <item name="strokeColor">#47474747</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">6dp</item>
        <item name="centered">true</item>
    </style>
    <style name="spinner_style" >
    <item name="android:background">@drawable/dropdownbackground</item>
    </style>

    <style name="storyviewlowerbuttonstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#434343</item>
        <item name="android:drawablePadding">1dp</item>
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">28dip</item>
        <item name="android:maxHeight">28dip</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="starRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_small_full</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="starRatingBarMedium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_medium_full</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>
